@model _20240300TryCWAAPI.Models.EarthquakeReport.EarthquakeReportListModel

<style>
    .link-black {
        /*/color: black;  將連結顏色設置為黑色 */
        text-decoration: none; /* 移除連結的下劃線 */
    }
</style>

<script src="/Scripts/EarthquakeReport/EarthquakeReportList.js" type="text/javascript"></script>

<br />
<h2>
    @Resources.EarthquakeReportList.Label_TitleEarthquakeReport
</h2>
<br />
<div class="row">
    <div class="col-md-6">
        <h3>@Resources.EarthquakeReportList.Label_News</h3>
        <img src="@Model.EarthquakeSignificantDataAPIData[0].ReportImageURI"style="height: auto; width: 100%;" onclick="showZoomedImage(this)" />
    </div>
    <div class="col-md-6">
            @foreach (var a in Model.EarthquakeSignificantDataAPIData)
            {
                <div class="card mb-3">
                    <h5 class="card-header">@Resources.EarthquakeReportList.Label_EarthquakeNumber @a.EarthquakeNo</h5>
                    <div class="row card-body">
                        <div class="col-md-8">
                            <p> @Resources.EarthquakeReportList.Label_Magnitude @a.EarthquakeInfo.EarthquakeMagnitude.MagnitudeValue @Resources.EarthquakeReportList.Label_Depth @a.EarthquakeInfo.FocalDepth @Resources.EarthquakeReportList.Label_KilometerDistance</p>
                            <p> @a.EarthquakeInfo.Epicenter.Location</p>
                            <a href="@a.Web" class="link-black"> @Resources.EarthquakeReportList.Label_LearnMore</a>
                        </div>
                        <div class="col-md-4">
                            <img src="@a.ShakemapImageURI" style="height: 100px; width: auto;" onclick="showZoomedImage(this)" />
                        </div>
                    </div>
                </div>
            }
    </div>
</div>
